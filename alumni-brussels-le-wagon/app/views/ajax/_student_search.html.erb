<table class="table table-hover section_under-searchbar">
  <thead>
    <tr>
      <th></th>
      <th><%= t("batch_search.student_first_name_table") %></th>
      <th><%= t("batch_search.student_project_table") %></th>
      <th><%= t("batch_search.student_batch_table") %></th>
      <th><%= t("batch_search.student_github_table") %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <a href="<%= "/#{@language}/batches/#{student.batch.name}/?student=#{student.id - 1}" %>">
          <%= image_tag "batches/batch-#{student.batch.name}/#{student.picture}", class: "img-searchbar" %>
        </a>
      </td>
      <td>
        <a href="<%= "/#{@language}/batches/#{student.batch.name}/?student=#{student.id - 1}" %>">
          <p><%= student.first_name %> </p>
        </a>
      </td>
      <td>
        <p><a href="<%= student.project.project_url %>" target="_blank"> <%= student.project.name %></a></p>
      </td>
      <td>
        <p><%= link_to "Batch \##{student.batch.name}", "#{I18n.locale}/batches/#{student.batch.name}/" %></p>
      </td>
      <td>
        <a class='github-searchbar' target='_blank' href="<%= student.github_url %>" data-toggle="tooltip" data-placement="bottom" title='<%= t("modal.link_github_tooltip") %>'>
          <i class='mdi-github-circle mdi'></i>
        </a>
      </td>
    </tr>
  </tbody>
</table>
