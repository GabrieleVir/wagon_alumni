<div class='batches-container'>
  <% @batches.each_with_index do |batch, index| %>
    <div class='batch-item-container' id='batch-<%= batch.name %>'>
      <div class='batch-item'>
        <div class='batch-item-thumb' style="background-image: linear-gradient(to left, <%= batch_gradient_color(index) %>), url('<%= image_path(batch.picture) %>')">
          <div class='batch-item-content'>
            <div>
              <div class='batch-item-content-title'>
                Le <span class='middle-sep'></span> Wagon <span class='middle-sep'></span>
                Batch <span class='middle-sep'></span> <%= batch.name %> <span class='end-sep'>Â¬</span>
              </div>
              <div class='batch-item-content-tagline'>
                <%= t('.description_batch'), total_students: batch.students.count %>
                <p><%= l(batch.date_start, format: :month) %> - <%= l(batch.date_end, format: :month_year) %></p>
              </div>
              <div class='batch-item-content-btn'>
                <%= link_to t('.link_to_students'), "batches/#{batch.name}/" %>
                <% if (0 === 0) #batch.students.project_id %>
                  <%= link_to t('.link_to_projects'), "http://alumni.lewagon.org/batches/#{batch.name}/", target: '_blank', class: 'is-outlined' %>
                <% end %>
                <% if batch.previous_batch %>
                  <a href="#batch-20" class="is-outlined"><%= t('.previous_batch') %></a>
                <% elsif batch.next_batch %>
                  <a href="#batch-20" class="is-outlined"><%= t('.next_batch') %></a>
                <% end %>
                <% if batch == @batches.first %>
                  <%= link_to 'Le Wagon', "http://lewagon.com/amsterdam", target: '_blank', class: 'is-outlined' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
